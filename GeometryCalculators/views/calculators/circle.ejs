<!-- Circle Calculator -->
<div class="calculator-card">
    <h2>Circle Calculator</h2>
    <form data-type="circle" onsubmit="event.preventDefault(); calculate('circle')">
        <div class="input-group">
            <input type="number" name="radius" placeholder="Radius">
        </div>
        <button type="submit" class="calculate-btn">Calculate</button>
        <div id="circle-result" class="result-text"></div>
    </form>
    
</div>
