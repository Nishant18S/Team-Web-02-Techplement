<!-- Right-Angled Triangle Calculator -->
<div id="right-angled-triangle">
    <h2>Right-Angled Triangle Calculator</h2>
    <form data-type="right-angled-triangle" onsubmit="event.preventDefault(); calculate('right-angled-triangle')">
        <input type="number" name="base" placeholder="Base">
        <input type="number" name="height" placeholder="Height">
        <button type="submit">Calculate</button>
    </form>
    <p id="right-angled-triangle-result"></p>
</div>
