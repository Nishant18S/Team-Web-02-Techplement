<!-- Triangle Calculator -->
<div id="triangle">
    <h2>Triangle Calculator</h2>
    <form data-type="triangle" onsubmit="event.preventDefault(); calculate('triangle')">
        <input type="number" name="base" placeholder="Base">
        <input type="number" name="height" placeholder="Height">
        <button type="submit">Calculate</button>
    </form>
    <p id="triangle-result"></p>
</div>