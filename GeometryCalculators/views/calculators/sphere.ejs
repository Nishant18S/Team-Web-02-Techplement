<!-- Sphere Calculator -->
<div class="calculator-card">
    <h2>Sphere Calculator</h2>
    <form data-type="sphere" onsubmit="event.preventDefault(); calculate('sphere')">
        <div class="input-group">
            <input type="number" name="radius" placeholder="Radius">
        </div>
        <button type="submit" class="calculate-btn">Calculate</button>
        <div id="sphere-result" class="result-text"></div>
    </form>
    
</div>